<h1>New Restaurant</h1>

<%= simple_form_for([@restaurant]) do |f| %>
  <% if @restaurant.errors.any? %>
     <div class="errors-container">
       <ul>
         <% @restaurant.errors.full_messages.each do |message| %>
           <li><%= message %></li>
         <% end %>
       </ul>
     </div>
   <% end %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category %>
  <%= f.submit "Add a restaurant", class: "btn btn-info" %>
<% end %>

<p class="text-center">
  <%= link_to "Back to restaurants list", restaurants_path, class: "btn btn-primary" %>
</p>
